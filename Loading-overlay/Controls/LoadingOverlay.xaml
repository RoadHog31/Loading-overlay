<UserControl x:Class="Loading_overlay.Controls.LoadingOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Loading_overlay.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#AAFFFFFF">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Loading data" Margin="5"
                       FontSize="20" Foreground="Aquamarine"/>
            <ProgressBar IsIndeterminate="True" Height="10"
                         Margin="5" Foreground="Red"
                         Background="Black"
                         BorderThickness="0"/>
        </StackPanel>
            
    </Grid>
</UserControl>
